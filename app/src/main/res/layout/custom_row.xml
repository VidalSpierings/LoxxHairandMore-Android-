    </TextView>

    <View
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:id="@+id/horizontal_divider"
        android:layout_width="2sp" />
</RelativeLayout>
